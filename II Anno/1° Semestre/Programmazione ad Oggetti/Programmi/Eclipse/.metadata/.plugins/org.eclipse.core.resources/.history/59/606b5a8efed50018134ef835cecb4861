package main_package;

public class DataSet {
	//Costruttore
	public DataSet() { 
		sum = 0; 
		count = 0; 
		minimum = null; 
		maximum= null; 
		}
	
	//retstiuisce la media
	public double getAverage() { 
		if (count == 0) 
			return 0; 
		else 
			return sum / count; 
		} 
	
	//Restituisce un oggetto Measurable con il valore più grande 
	public Measurable getMaximum() { return maximum; }
	// Restituisce un oggetto Measurable con il valore più piccolo 
	public Measurable getMinimum() { return minimum; } 
	
	// Aggiunge un oggetto Measurable 
	public void add(Measurable x) { 
		sum = sum + x.getMeasure(); 
		if (count == 0 || minimum.getMeasure() > x.getMeasure())  
			minimum = x; 
		if (count == 0 || maximum.getMeasure() < x.getMeasure()) 
			maximum = x; 
		count++; } 
	
	//attributi
	private double sum; 
	private Measurable minimum; 
	private Measurable maximum; 
	private int count; 
}